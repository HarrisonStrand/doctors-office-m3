@{
  Layout = "_Layout";
}

@model Office.Models.Specialty

<h2>Edit</h2>

<h4>Edit this Specialty: @Html.DisplayFor(model => model.SpecialtyName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SpecialtyId)

  @Html.LabelFor(model => model.SpecialtyName)
  @Html.EditorFor(model => model.SpecialtyName)

  <input type="submit" value="Save" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to Specialties", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>