@{
  Layout = "_Layout";
}

@using Office.Models;
@model List<Office.Models.Specialty>;

<h1>Specialties</h1>
<hr />
@if (@Model.Count == 0)
{
<h3>There are no Specialties created.</h3>
}

@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId })</li>
  @using (Html.BeginForm("Delete", "Specialties", FormMethod.Get))
  {
    @Html.Hidden("id", @specialty.SpecialtyId)
    <input type="submit" value="Remove Specialty" class="btn btn-default"/>
  }
}
<br><p>@Html.ActionLink("Add a new Specialty", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
