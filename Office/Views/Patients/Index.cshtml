@{
  Layout = "_Layout";
}

@using Office.Models;
@model List<Office.Models.Patient>;

<h1>Enrolled Patients:</h1>

@if (@Model.Count == 0)
{
  <h2>No Patients have been enrolled yet...</h2>
}

@foreach(Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.PatientName}", "Details", new { id = patient.PatientId })</li>
}

<p>@Html.ActionLink("Add New Patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>