@{
  Layout = "_Layout";
}

@model Office.Models.Patient

<h2>Edit</h2>

<h4>Edit: @Html.DisplayFor(model => model.PatientName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.LabelFor(model => model.PatientName)
  @Html.EditorFor(model => model.PatientName)

  @Html.Label("Select a Doctor")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Save" class="btn btn-default" />
  
}

<p>@Html.ActionLink("Back to Patients", "Index")</p>