@{
  Layout = "_Layout";
}
@model Office.Models.Doctor;

<h2>Doctor Overview</h2>
<hr />
<h3>Doctor: @Html.DisplayFor(model => model.DoctorName)</h3>
<h3>Specialty: @Html.DisplayFor(model => model.DoctorSpecialty)</h3>

@if(@Model.Patients.Count == 0)
{
  <p>This Doctor is currently not assigned to any patients.</p>
}
else
{
  <h4><u>Assigned Patients; Doctor @Html.DisplayFor(model => model.DoctorName)</u></h4>
  <ul>
    @foreach(var join in Model.Patients)
    {
      <li>@join.Patient.PatientName</li>
    }
  </ul>  
}
<p>@Html.ActionLink("Edit Doctor Information", "Edit", new { id = Model.DoctorId })